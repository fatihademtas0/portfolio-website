@using MvcCvProject.Models.Entity
@model List<TblCourses>

@{
    var half = (int)Math.Ceiling(Model.Count() / 2.0);
    var firstHalf = Model.Take(half);
    var secondHalf = Model.Skip(half);
}



<div class="resume-section-content">
    <h2 class="mb-5">Kurslar</h2>
    <div class="row">
        <div class="col-md-6">
            <ul class="fa-ul w-100">
                @foreach (var value in firstHalf)
                {
                        var iconClass = value.id == 1 ? "fa-book" : "fa-laptop-code";
                    <li class="mb-2 d-flex align-items-start">
                        <span class="fa-li" style="margin-top: 2px;">
                            <i class="fas @iconClass text-primary"></i>
                        </span>
                        <div class="flex-grow-1">
                            @value.description
                        </div>
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-6">
            <ul class="fa-ul w-100">
                @foreach (var value in secondHalf)
                {
                    <li class="mb-2 d-flex align-items-start">
                        <span class="fa-li" style="margin-top: 2px;">
                            <i class="fas fa-laptop-code text-primary"></i>
                        </span>
                        <div class="flex-grow-1">
                            @value.description
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>