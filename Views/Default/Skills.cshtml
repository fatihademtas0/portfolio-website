@using MvcCvProject.Models.Entity
@model List<TblSkills>

<div class="resume-section-content">
    <h2 class="mb-5">Beceriler</h2>
    <div class="subheading mb-3">Programlama Dilleri & Araçlar</div>
    <ul class="list-inline dev-icons">
        <li class="list-inline-item" title="Visual Studio Code">
            <i class="fas fa-code"></i> <!-- VSCode'e özel ikon yok, genelde "code" kullanılır -->
        </li>
        <li class="list-inline-item" title="PHPStorm">
            <i class="fas fa-bolt"></i> <!-- PHPStorm için özel ikon yok, genelde "bolt" gibi sembolik ikonlar kullanılır -->
        </li>
        <li class="list-inline-item" title="PHP">
            <i class="fab fa-php"></i>
        </li>
        <li class="list-inline-item" title="Laravel">
            <i class="fab fa-laravel"></i>
        </li>
        <li class="list-inline-item"><i class="fab fa-wordpress"></i></li>
        <li class="list-inline-item" title="SQL">
            <i class="fas fa-database"></i>
        </li>
        <li class="list-inline-item" title="JavaScript">
            <i class="fab fa-js"></i>
        </li>
        <li class="list-inline-item" title="React">
            <i class="fab fa-react"></i>
        </li>
        <li class="list-inline-item"><i class="fab fa-node-js"></i></li>
        <li class="list-inline-item"><i class="fab fa-npm"></i></li>
        <li class="list-inline-item" title="HTML5">
            <i class="fab fa-html5"></i>
        </li>
        <li class="list-inline-item" title="CSS3">
            <i class="fab fa-css3-alt"></i>
        </li>
        <li class="list-inline-item" title="C#">
            <i class="fas fa-hashtag"></i> <!-- Sembol olarak kullanılır, özel C# ikonu yok -->
        </li>
        <li class="list-inline-item" title="ASP.NET">
            <i class="fas fa-network-wired"></i> <!-- Genelde .NET projeleri için network simgesi kullanılır -->
        </li>
        <li class="list-inline-item" title="Git">
            <i class="fab fa-git-alt"></i>
        </li>
        <li class="list-inline-item"><i class="fab fa-sass"></i></li>
        <li class="list-inline-item"><i class="fab fa-less"></i></li>
        <li class="list-inline-item" title="Docker">
            <i class="fab fa-docker"></i>
        </li>
    </ul>

    @{
        var half = (int)Math.Ceiling(Model.Count() / 2.0);
        var firstHalf = Model.Take(half);
        var secondHalf = Model.Skip(half);
    }

    <div class="row">
        <div class="col-md-6">
            <ul class="fa-ul mb-0">
                @foreach (var value in firstHalf)
                {
                    <li>
                        <span class="fa-li"><i class="fas fa-code"></i></span>
                        @value.skill
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-6">
            <ul class="fa-ul mb-0">
                @foreach (var value in secondHalf)
                {
                    <li>
                        <span class="fa-li"><i class="fas fa-code"></i></span>
                        @value.skill
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
