@using MvcCvProject.Models.Entity;
@model List<TblCertfications>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <h2>Certifications</h2>
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header p-2">
                                    
                                </div><!-- /.card-header -->
                                <div class="card-body">
                                        <!-- /.tab-pane -->
                                        <div class="tab-pane" id="timeline">
                                            <!-- The timeline -->
                                            <div class="timeline timeline-inverse">
                                                @foreach (var item in Model)
                                                {


                                                <div>
                                                    <i class="fas fa-comment bg-primary"></i>

                                                    <div class="timeline-item">
                                                        <div class="timeline-body">
                                                            @item.description
                                                        </div>
                                                        <div class="timeline-footer">
                                                            <a href="/Certificate/GetCertificate/@item.id" class="btn btn-warning btn-sm">Update</a>
                                                            <a href="/Certificate/DeleteCertificate/@item.id" class="btn btn-danger btn-sm">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                }
                                            </div>
                                            <a href="/Certificate/AddCertificate" class="btn btn-primary" >Add Certification</a>
                                        </div>
                                    </div>
                                    <!-- /.tab-content -->
                                </div><!-- /.card-body -->
                            </div>
                            <!-- /.nav-tabs-custom -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
            </section>
</body>
</html>


