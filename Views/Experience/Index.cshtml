@using MvcCvProject.Models.Entity
@model List<TblExperiences>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Experiences List</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Subtitle</th>
        <th>Description</th>
        <th>Date</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.title</td>
            <td>@item.title</td>
            <td>@item.description</td>
            <td>@item.date</td>
            <td><a href="/Experience/GetExperience/@item.id" class="btn btn-warning">Update</a></td>
            <td><a href="/Experience/DeleteExperience/@item.id" class="btn btn-danger">Delete</a></td>
        </tr>

    }

</table>

<a href="/Experience/AddExperience" class="btn btn-primary">Add new experience</a>

