@model MvcCvProject.Models.Entity.TblEducation

@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Update Education İnformation</h2>
<br />

<form method="post">

    <div class="form-group">
        <label>ID</label>
        @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group">
        <label>Title</label>
        @Html.TextBoxFor(x => x.title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Subtitle</label>
        @Html.TextBoxFor(x => x.subtitle, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>GPA</label>
        @Html.TextBoxFor(x => x.gpa, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Date</label>
        @Html.TextBoxFor(x => x.date, new { @class = "form-control" })
    </div>

    <br />

    <button class="btn btn-info" style="padding: 8px 16px">Update</button>
</form>

