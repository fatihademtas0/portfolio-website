@using MvcCvProject.Models.Entity
@model List<TblAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Users List</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Password</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.username</td>
            <td>@item.password</td>
            <td><a href="/Admin/Update/@item.id" class="btn btn-warning">Update</a></td>
            <td><a href="/Admin/Delete/@item.id" class="btn btn-danger">Delete</a></td>
        </tr>

    }

</table>

<a href="/Admin/Add" class="btn btn-primary">Add new user</a>

